{
  "name": "typescript_template",
  "version": "2.0.0",
  "description": "Typescript-starter good for lit-elements. Bare minimum with unit-test setup",
  "main": "index.ts",
  "scripts": {
    "start": "webpack serve -c webpack.dev.js",
    "build": "webpack -c webpack.prod.js; cp -R ./src/assets dist/",
    "test": "webpack -c webpack.test.js;",
    "test:watch": "webpack -c webpack.test.js --watch & jasmine-browser-runner --config=jasmine-browser.json",
    "build:docker": "yarn; yarn build; docker build -t localhost/frontend:latest -f docker/Dockerfile ."
  },
  "keywords": [
    "starter",
    "typescript",
    "lit"
  ],
  "author": "Martin Klingenberg",
  "license": "ISC",
  "devDependencies": {
    "@open-wc/testing-helpers": "^3.0.1",
    "@types/mocha": "^10.0.6",
    "dotenv-webpack": "^8.0.1",
    "glob": "^10.3.12",
    "html-webpack-plugin": "^5.5.0",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^5.0.1",
    "lit-scss-loader": "^2.0.1",
    "mocha": "^10.4.0",
    "sass": "^1.76.0",
    "sass-loader": "^13.2.2",
    "ts-lit-plugin": "^2.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "5.0.4",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "lit": "^3.1.3",
    "rxjs": "^7.8.1"
  }
}
